<Window x:Class="Scalizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scalizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Label x:Name="titleText" Content="Welcome to Scalizer." Style="{StaticResource 3270}" HorizontalAlignment="Center" Height="37" Margin="0,110,0,0" VerticalAlignment="Top" Width="232" FontSize="24" />
        <CheckBox x:Name="isOpenStartUp" Content="Run on Windows Startup" HorizontalAlignment="Center" Height="22" Margin="0,152,0,0" VerticalAlignment="Top" Width="162" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" IsChecked="False"/>
        <Button x:Name="customButton" Content="Create New Profile" HorizontalAlignment="Center" Height="24"  Margin="0,362,0,0" VerticalAlignment="Top" Width="122" Click="Button_Click"/>
        <Label x:Name="statusText" HorizontalAlignment="Center" Height="25" Margin="0,192,0,0" VerticalAlignment="Top" Width="122"/>
        <ComboBox HorizontalAlignment="Center" Height="21" Margin="0,269,0,0" VerticalAlignment="Top" Width="122" RenderTransformOrigin="0.606,-0.445"/>
        <Label Content="Active Profile" HorizontalAlignment="Center" Height="28" Margin="0,241,0,0" VerticalAlignment="Top" Width="88"/>
        <CheckBox Content="isEnabled" HorizontalAlignment="Center" Height="16" Margin="0,295,0,0" VerticalAlignment="Top" Width="80" Checked="CheckBox_Checked_1"/>
    </Grid>
</Window>
