<Window x:Class="Scalizer.CustomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scalizer"
        mc:Ignorable="d"
        Title="Scalizer" Height="450" Width="800" Background="Black">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush Opacity=".5" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="LightSteelBlue" Offset="1.0" />
                <GradientStop Color="DarkGray" Offset="0.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <Button x:Name="backButton" Foreground="White" Background="SlateGray" Content="Delete" HorizontalAlignment="Left" Height="28" Margin="35,29,0,0" VerticalAlignment="Top" Width="59" Click="Button_Click"/>
        <Label Foreground="White" Content="Welcome to Scalizer." HorizontalAlignment="Left" Height="28" Margin="114,29,0,0" VerticalAlignment="Top" Width="138"/>
        <Grid Margin="75,185,64,185">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="299*"/>
                <ColumnDefinition Width="362*"/>
            </Grid.ColumnDefinitions>
            <Label Foreground="White" Content="if" HorizontalAlignment="Left" Height="37" Margin="6,12,0,0" VerticalAlignment="Top" Width="26" FontSize="20"/>
            <ComboBox x:Name="monitorName" MouseLeftButtonDown="ComboBox_MouseLeftButtonDown" SelectionChanged="ComboBox_SelectionChanged" DropDownOpened="ComboBox_DropDownOpen" HorizontalAlignment="Left" Margin="32,19,0,0" VerticalAlignment="Top" Width="120" SelectedIndex="0"/>
            <Label Foreground="White" Content=".isDetected()=&gt; { changeDPIScaleTo " HorizontalAlignment="Left" Height="54" Margin="152,10,0,0" VerticalAlignment="Top" Width="368" FontSize="20" Grid.ColumnSpan="2"/>
            <TextBox x:Name="dpiValue" PreviewTextInput="TextBox_PreviewTextInput" HorizontalAlignment="Left" Margin="184,19,0,0" VerticalAlignment="Top" Width="120" Height="22" Grid.Column="1"/>
            <Label Foreground="White" Content="% }" HorizontalAlignment="Left" Height="39" Margin="309,11,0,0" VerticalAlignment="Top" Width="42" FontSize="20" Grid.Column="1"/>
        </Grid>
        <TextBox x:Name="profileName" HorizontalAlignment="Left" Margin="319,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Height="30" />
        <Label Foreground="White" Content="Set Profile Name to..." HorizontalAlignment="Left" Height="35" Margin="114,127,0,0" VerticalAlignment="Top" Width="200" FontSize="20"/>
        <Button x:Name="saveButton" Background="Gray" Foreground="White" Content="Save" HorizontalAlignment="Left" Height="28" Margin="682,29,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="deleteButton" Background="Gray" Foreground="White" Content="Delete" Visibility="Hidden" HorizontalAlignment="Left" Height="28" Margin="346,254,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click"/>
    </Grid>
</Window>
